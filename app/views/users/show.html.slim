= provide(:title, "#{@user.name}のページ")

.user-profiles
  .user-profile-wrapper
    .user-profile-main
      .image-wrapper
        - if @user.img.present?
          = image_tag(@user.img.url)
        - else
          = image_tag("no_image.png")
      .name-wrapper
        p.name = @user.name
        p.id = @user.nickname.present? ? "@#{@user.nickname}" : "@(ID未設定)"
      .follow-wrapper
        - if user_signed_in? && @user.id == current_user.id
          = link_to 'プロフィールを編集', edit_user_registration_path, class: 'edit-profile'
        - else
          = link_to 'フォローする', "#", class: 'follow'
    .profile-sub
      .profile 
        = simple_format text_url_to_link(h(@user.profile)).html_safe
      .follow-follower
        = link_to "#{24 + 200}フォロー中", "#"
        = link_to "#{12 + 100}フォロワー", "#"

        /// DM的な機能に飛ぶURL現在（2020/12/10）は不要
        / - if @isRoom == true
        /   p
        /     a.btn.btn-default href="/rooms/#{@roomId}"  会議室へ
        / - else
        /   = form_for @room do |f| 
        /     = fields_for @entry do |e|
        /       = e.hidden_field :user_id, :value=> @user.id
        /     = f.submit "会議室へ", class: 'btn btn-default'

  .user-novels-wrapper
    .novels-title
      h2 依頼作品
    .user-novels-requests.over-flow
      - @request_posts.each do |post|
        = link_to post do
          - if post.image.present?
            = image_tag(post.image.url)
          - else
            = image_tag("no_image_book.jpg")
          h3 = post.title.truncate(27)
      
    .novels-title
      h2 執筆参加作品(仮)
    .user-novels-writing.over-flow
      - @writing_posts.each do |post|
        = link_to post do
          - if post.image.present?
            = image_tag(post.image.url)
          - else
            = image_tag("no_image_book.jpg")
          h3 = post.title.truncate(27)

css:
  .user-profiles {
    margin-left: 8%;
    margin-right: 8%;
  }

  .user-profile-wrapper img {
    width: 88px;
    height: 88px;
  }

  .user-profile-main {
    display: flex;
  }

  .user-profile-main .name-wrapper {
    margin-left: 1.4%;
    margin-top: 2.8%;
  }

  .user-profile-main .name-wrapper .name {
    font-weight: bold;
    color: #333;
    font-size: 1.17rem;
  }

  .user-profile-main .name-wrapper .id {
    color: #777;
    font-size: 0.87rem;
  }

  .user-profile-main .follow-wrapper {
    margin-left: auto;
    margin-top: 5%;
    padding-right: 7%;
  }

  .user-profile-main .follow-wrapper a {
    padding: 12px 24px;
    border-radius: 5px;
    color: #fff;
    transition: .3s;
  }

  .user-profile-main .follow-wrapper a.edit-profile {
    background-color: #66cc66;
  }

  .user-profile-main .follow-wrapper a.follow {
    background-color: #33ccff;
  }

  .user-profile-main .follow-wrapper a:hover {
    transition: .3s;
    opacity: .8;
  }


  .profile-sub {
    margin-left: 7%;
    font-size: 0.82rem;
  }

  .profile-sub .profile {
    margin-top: 0.8%;
    color: #555;
  }

  .profile-sub .follow-follower {
    margin-top: 0.6%;
  }

  .profile-sub .follow-follower a {
    color: #222;
    margin-right: 1%;
    transition: .3s;
  }

  .profile-sub .follow-follower a:hover {
    color: #0a9dd1;
    transition: .3s;
  }

  .user-novels-wrapper {
    margin-top: 4%;
  }

  .user-novels-wrapper img {
    width: 250px;
    height: 352px;
    transition: 0.5s;
    box-shadow: 0 5px 12px 0 rgba(0, 0, 0, .3);
  }

  .user-novels-wrapper img:hover {
    filter: brightness(89%);
    transition: 0.5s;
  }

  .novels-title {
    margin-top: 2%;
  }

  .novels-title h2 {
    font-size: 1.125rem;
    color: #555;
  }

  .user-novels-requests {
    display: flex;
    margin-top: 2.2%;
  }

  .user-novels-requests a {
    margin-left: 1.4%;
    color: #555;
  }

  .user-novels-writing {
    margin-top: 2.2%;
    display: flex;
  }

  .user-novels-writing a {
    margin-left: 1.4%;
    color: #555;
  }


  @media screen and (max-width: 480px) {
    .user-profiles {
      margin-top: 6%;
    }

    .user-profile-wrapper img {
      width: 75px;
      height: 75px;
    }

    .user-profile-main .name-wrapper {
      margin-left: 2%;
      margin-top: 8.3%;
    }
    
    .user-profile-main .name-wrapper .name {
      font-size: 1.2rem;
    }
    
    .user-profile-main .name-wrapper .id {
      font-size: 0.9rem;
    }

    .user-profile-main .follow-wrapper {
      margin-top: 2.4%;
      padding-right: 1%;
    }
    
    .user-profile-main .follow-wrapper a {
      padding: 7px 13px;
      font-size: 0.85rem;
    }


    .profile-sub {
      margin-left: 2%;
      font-size: 0.8rem;
    }

    .profile-sub .profile {
      margin-top: 1.5%;
    }

    .profile-sub .follow-follower {
      margin-top: 3%;
    }

    .user-novels-wrapper {
      margin-top: 22%;
    }
    
    .user-novels-wrapper img {
      width: 230px;
      height: 313px;
    }
    
    .user-novels-requests {
      margin-top: 4%;
      margin-bottom: 8%;
    }
    
    .user-novels-requests a {
      margin-left: 4%;
    }
    
    .user-novels-writing {
      margin-top: 4%;
      margin-bottom: 8%;
    }
    
    .user-novels-writing a {
      margin-left: 4%;
    }
  }
